<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
    <div class="col-sm-2 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
    <div class="row">
      <div class="col-sm-10 px-sm-0 mx-auto mb-5">
        <table class="table text-center admin-items mb-5">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
            <tr>
              <th class="align-middle"><%= item.id %></th>
              <th class="align-middle"><%= link_to admin_item_path(item.id) do %>
                <u><%= item.name %></u>
              </th>
              <% end %>
              <th class="align-middle"><%= item.price %></th>
            </tr>
          </tbody>
          <% end %>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>