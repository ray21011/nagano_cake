<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品画像 %></th>
            <tb><%= f.file_field :image %></tb>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品名 %></th>
            <tb><%= f.text_field :name, placeholder:"商品名" %></tb>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品説明 %></th>
            <tb><%= f.text_area :introduction, size: "50*5", placeholder:"ここに説明文を記述します" %></tb>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税抜価格 %></th>
            <tb><%= f.text_field :price, placeholder:"1000" %>円</tb>
          </div>
        </tr>
        <tr>
          <div class="form-action">
            <tb><%= f.submit "変更を保存", class:"btn btn-success" %></tb>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>