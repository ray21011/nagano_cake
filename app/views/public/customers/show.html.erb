<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h3>登録情報</h3>
    </div>
    <div class="col-sm-4 px-sm-0">
      <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success px-4 mb-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">氏名</th>
          <td><%= @user.last_name+" "+@user.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <td><%= @user.last_name_kana+" "+@user.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @user.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @user.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h3>注文履歴</h3>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧をみる", orders_path, class:"btn btn-primary mb-2" %>
    </div>
  </div>
</div>