<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0 ">
      <h2>商品一覧（全<%= @items_all.count %>件）</h2>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @items.each do |item| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
        <%= link_to item_path(item) do %>
          <p class="img-wrap"><%= image_tag item.get_image(80,80), format: "jpeg", fallback: "default-image.jpeg" %></p>
        <% end %>
        <div class="card-body">
          <p class="item-details card-text"><%= item.name %></p>
          <p class="item-details card-text"><%= item.price %>円（税抜）</p>

        </div>
      </div>
    </div>
    <% end %>
  </div>
    <%= paginate @items, class:"text-center" %>
</div>